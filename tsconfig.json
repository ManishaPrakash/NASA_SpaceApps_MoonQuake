{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "Bundler",
  },
  "exclude": ["node_modules"],
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ]
}